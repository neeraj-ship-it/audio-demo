# ðŸ”‘ ENVIRONMENT VARIABLES FOR RAILWAY DEPLOYMENT
# Copy this file to .env.local for local testing
# Add these to Railway Environment Variables

# ========================================
# ELEVENLABS API (Required)
# ========================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ========================================
# AWS S3 CREDENTIALS (Required)
# ========================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=ap-south-1
AWS_S3_BUCKET=stagefm-audio

# ========================================
# OPENAI API (Optional - for AI generation)
# ========================================
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# DEPLOYMENT OPTIONS
# ========================================
NODE_ENV=production

# Generate stories immediately on service start (true/false)
GENERATE_ON_START=false

# Auto-push to GitHub after generation (true/false)
AUTO_DEPLOY=true

# ========================================
# OPTIONAL: ALERTS & NOTIFICATIONS
# ========================================
# Webhook URL for error alerts (Slack, Discord, etc.)
ALERT_WEBHOOK_URL=

# ========================================
# PORT (Railway auto-assigns)
# ========================================
PORT=3000
